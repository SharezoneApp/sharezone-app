{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            // This task generates the l10n files for the
            // sharezone_localizations.
            //
            // FVM & arbsort is required to run this task.
            "label": "Generate l10n for sharezone_localizations",
            "type": "shell",
            "command": "bin/sz l10n generate",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Add license header to files",
            "type": "shell",
            // Using bin/sz instead of sz so that it also work if a developer
            // has not added the sz binary to their PATH.
            "command": "bin/sz lh add",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}