{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            // This task generates the l10n files for the
            // sharezone_localizations.
            //
            // FVM & arbsort is required to run this task.
            "label": "Generate l10n for sharezone_localizations",
            "type": "shell",
            "command": "bin/sz l10n generate",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Add license header to files",
            "type": "shell",
            // We don't use the Sharezone Repo CLI (`sz lh add`) because just
            // using bash commands is way faster.
            //
            // Bash script: 0.23s
            // Sharezone Repo CLI: 1.49s
            //
            // See https://github.com/SharezoneApp/sharezone-app/pull/2157
            "command": "bin/add_license_headers.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            // The command above will not work on Windows, as it uses
            // bash-specific features. For this reason, we override the command
            // for Windows and fallback to the Sharezone Repo CLI.
            "windows": {
                "command": "sz lh add"
            }
        }
    ]
}